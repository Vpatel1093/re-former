<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <p>This form contains <%= pluralize(@user.errors.count, "error") %>.
    </p>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  <% end %>
  Username: <%= f.text_field :username %><br>
  Email: <%= f.text_field :email, placeholder: "Your email here" %><br>
  Password <%= f.password_field :password %><br>
  <%= f.submit %>
<% end %>
